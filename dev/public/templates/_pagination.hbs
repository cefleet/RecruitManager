{{#if pagination.previous.disabled}}<li class="disabled">{{else}}<li>{{/if}}
  <a ui-action='{{pagination.prevPage}}'><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a>
</li>
{{#each pagination.pages}}
  <li {{#if active}} class='active'{{/if}}><a ui-action='{{page}}'>{{page}}</a></li>
{{/each}}
{{#if pagination.next.disabled}}<li class="disabled">{{else}}<li>{{/if}}
  <a ui-action='{{pagination.nextPage}}'><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a>
</li>
